//dạng số chẵn
#include"stdio.h"
int main (){
    int a;
    nhap:
    printf("nhập a:");
    scanf("%d",&a);
    
    if(a<0)goto nhap;
    printf("các số chẵn:\n");
    for(int i=1;i<=a;i++){
        if(i%2!=0)continue;
        printf("%d\n",i);
    }
    
}
//dạng số lẽ 
#include"stdio.h"
int main (){
    int a;
    nhap:
    printf("nhập a:");
    scanf("%d",&a);
    
    if(a<0)goto nhap;
    printf("các số lẽ:\n");
    for(int i=1;i<=a;i++){
        if(i%2==0)continue;
        printf("%d\n",i);
    }
    
}
